{
  "compilerOptions": {
    "outDir": "./public/",
    "types": [ "vuetify"],
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/ts/*"]
    }
  },
  "include": [
    "./resources/ts/**/*.ts",
    "./resources/ts/**/*.tsx",
    "./resources/ts/**/*.d.ts",
    "./resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
