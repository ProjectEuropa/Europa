#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üìù Checking commit message format..."

# Basic commit message format check
# Expected format: type(scope): description
# Example: feat(auth): add login functionality

commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|ci|build)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Expected format: type(scope): description"
    echo "Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build"
    echo ""
    echo "Examples:"
    echo "  feat(auth): add login functionality"
    echo "  fix(ui): resolve button alignment issue"
    echo "  docs: update API documentation"
    echo ""
    exit 1
fi

echo "‚úÖ Commit message format is valid!"